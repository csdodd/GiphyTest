<?xml version="1.0" encoding="utf-8"?>
<net.colindodd.gradientlayout.GradientLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity__root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    gl:start_color="@color/bg_start_color"
    gl:end_color="@color/bg_end_color"
    gl:orientation="TR_BL">

    <EditText
        android:id="@+id/main_activity__input"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:text="Make it rain"
        android:gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_activty__recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</net.colindodd.gradientlayout.GradientLinearLayout>

